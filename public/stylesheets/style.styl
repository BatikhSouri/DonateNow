body
	padding: 40px
	font: 14px "Lucida Grande", Helvetica, Arial, sans-serif

a
	color: #00B7FF

/*
* Counter page
*/

.projectcolumn
	border-width: 1px
	border-style: solid
	border-color: gray
	border-radius: 3px
	padding-right: 3px
	padding-left: 3px
	width: 100%

.counter
	text-align: center
	width: 100%
	color: steelblue
	font-size: 32px
	height: 80px
	padding-top: 20px

.center
	text-align: center

.title
	height: 36px

.counter.large
	font-size: 48px
	height: 125px
	padding-top: 32px

.donor-search-block
	border-color: silver
	border-style: solid
	border-width: 0px
	border-top-width: 1px
	border-bottom-width: 1px
	padding-top: 4px
	padding-bottom: 4px
	margin-bottom: 10px

.donor-search
	width: 200px
	display: inline-block
	margin-right: 6px

.fixedImgContainer
	margin-top: 20px
	display: inline-block
	vertical-align: middle
	height: 180px
	width: 100%
	text-align: center

.projectimg
	width: auto
	height: auto
	max-height: 100%
	max-width: 100%

/*
* Login page
*/

.loginContainer
	margin-top: 150px
	text-align: center

.loginForm
	display: inline-block
	height: 150px
	width: 250px
	border-style: solid
	border-width: 1px
	border-color: gray
	padding-top: 5px
	padding-left: 5px
	padding-right: 5px
	border-radius: 3px

.loginForm > form > input
	margin-top: 6px
	margin-bottom: 6px

.loginForm > form > button
	margin-top: 6px
	margin-bottom: 6px